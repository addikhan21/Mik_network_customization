<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_view_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="hr_expense.view_product_hr_expense_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="after">
                <page name="isp_equipment" string="Isp Equipment">
                    <group>
                        <field name="is_isp_service"/>
                        <field name="is_isp_equipment"/>
                        <field name="is_data_package_configured" invisible="1"/>
                    </group>

                </page>
            </xpath>
        </field>
    </record>
</odoo>