<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_view_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="hr_expense.view_product_hr_expense_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='can_be_expensed']" position="after">
                <div>
                    <field name="is_isp_configured" invisible="is_data_package_configured == True"/>
                    <label for="is_isp_configured" invisible="is_data_package_configured == True"/>
                    <field name="is_data_package"/>
                    <label for="is_data_package"/>
                    <field name="is_data_package_configured" invisible="is_data_package_configured == True"/>
                    <label for="is_data_package_configured" invisible="is_data_package_configured == True"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>