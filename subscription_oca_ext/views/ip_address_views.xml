<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ip_address_tree" model="ir.ui.view">
        <field name="name">ip.address.tree</field>
        <field name="model">ip.address</field>
        <field name="arch" type="xml">
            <list>
                <field name="ip_address"/>
                <field name="ip_type"/>
                <field name="subscription_id"/>
                <field name="subscription_state"/>
            </list>
        </field>
    </record>

    <record id="view_ip_address_form" model="ir.ui.view">
        <field name="name">ip.address.form</field>
        <field name="model">ip.address</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="ip_address"/>
                        <field name="ip_type" readonly="1"/>
                        <field name="subscription_id"/>
                        <field name="subscription_state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ip_address" model="ir.actions.act_window">
        <field name="name">IP Addresses</field>
        <field name="res_model">ip.address</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_ip_address" name="IP Management" parent="subscription_oca.subscription_tag_menu" action="action_ip_address"/>
</odoo>