                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_total_recharges"
                            type="object"
                            title="Recharge History"
                            class="oe_stat_button"
                            icon="fa-history">
                            <field name="recharge_count" widget="statinfo" string="History" />
                        </button>
                        <button name="action_view_radcheck"
                            groups="base_security_groups.group_noc,base_security_groups.group_admin"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-key">
                            <field name="radcheck_count" widget="statinfo" string="Radcheck"
                            />
                        </button>
                    </div>

                    <field name="expiry_date" invisible="1" />
                    <field name="radusergroup_id" invisible="1" />
                    <field name="can_access" invisible="1" />
                    <field name="package_distributor" invisible="1" />
                    <field name="is_disable" invisible="1" />
                    <field name="conection_status" invisible="1" />


