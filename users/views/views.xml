<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="rad_users_tree_view" model="ir.ui.view">
        <field name="name">rad.users.tree</field>
        <field name="model">users</field>
        <field name="arch" type="xml">
            <list string="Users">
                <field name="is_disable" column_invisible="1" />
                <field name="conection_status" column_invisible="1" />
                <field name="current_status" column_invisible="1" />
                <field name="username" widget='badge'
                    decoration-danger="current_status == 'offline'"
                    decoration-success="current_status == 'online'" />
                <field name="name" />
                <field name="package_id" />
                <field name="expiry_date_char" />
                <!-- <field name="distributor_type" /> -->
                <field name="address" />
                <field name="distributor_id" optional="hide" />
                <field name="mobile" optional="hide" />

            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="rad_users_form_view" model="ir.ui.view">
        <field name="name">rad.users.form</field>
        <field name="model">users</field>
        <field name="arch" type="xml">
