<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_recharge_history_tree" model="ir.ui.view">
        <field name="name">recharge.history.tree</field>
        <field name="model">recharge.history</field>
        <field name="arch" type="xml">
            <list  string="Recharge History" create="false" delete="false" edit="false">
                <field name="user_id" />
                <field name="distributor_id"  />
                <field name="distributor_type" />
                <field name="package_id" />
                <field name="amount" widget="monetary" />
                <field name="currency_id" column_invisible="1" />
                <field name="remaining_balance" />
                <field name="recharged_by" />
                <field name="recharge_date" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_recharge_history_form" model="ir.ui.view">
        <field name="name">recharge.history.form</field>
        <field name="model">recharge.history</field>
        <field name="arch" type="xml">
            <form string="Recharge History" create="false" delete="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id" readonly="1" />
                            <field name="distributor_id" readonly="1"   options="{'no_open': True, 'no_create' : True, 'no_create_edit' : True}" />
                            <field name="amount" widget="monetary" />
                        </group>
                        <group>
                            <field name="currency_id" invisible="1" />
                            <field name="remaining_balance" readonly="1" />
                             <field name="recharged_by"  readonly="1"   options="{'no_open': True, 'no_create' : True, 'no_create_edit' : True}"/>
                            <field name="recharge_date" readonly="1"    />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_recharge_history" model="ir.actions.act_window">
        <field name="name">Recharge History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">recharge.history</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>