<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_user_package_wizard" model="ir.ui.view">
      <field name="name">users.package.wizard.form</field>
      <field name="model">users.package.wizard</field>
      <field name="arch" type="xml">
        <form string="User Package">

          <div class="d-flex pb-2 align-items-center">
            <div>
              <i class="fa fa-cube pb-1 fa-3x text-primary" title="Users" />
            </div>
            <div class="card-body">
              <h2 class="card-title">Edit Package Details</h2>
              <p class="card-subtitle mb-2 text-muted">Your go-to solution for user
                package updates.
              </p>
            </div>
          </div>

          <group>
          <div class="d-flex ">
          <i class="fa fa-user mt-1 me-2" role="img" aria-label="User" />
            <field name="user_id"  string="User" readonly="1" />
            </div>
          </group>

          <group>

            <group string="Data to Update">
              <div>
                <field name="field_to_update" readonly="1" />
              </div>
            </group>

            <group string="Current Value">
              <div colspan="2">
                <field name="package_id" options="{'no_open': True}" readonly="1"
                  invisible="field_to_update != 'package_id'" />

              </div>
              <field name="releated_nas_id" invisible="1" />
              <field name="field_value_nas_id" invisible="1" />
            </group>

            <group string="New Value" colspan="2">
              <div colspan="2">
                <field name="distributor_id" invisible="1" />
                <field name="field_value"
                  options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
              </div>
            </group>

          </group>


          <footer>
            <button name="action_update_package"
              string="Update"
              type="object"
              class="btn-primary"
            />
            <button special="cancel"
              string="Cancel"
              class="btn-secondary" />
          </footer>

        </form>
      </field>
    </record>

    <record id="action_users_package_wizard" model="ir.actions.act_window">
      <field name="name">User Package Wizard</field>
      <field name="res_model">users.package.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

  </data>
</odoo>