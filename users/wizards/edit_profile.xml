<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_user_profile_wizard" model="ir.ui.view">
      <field name="name">users.profile.wizard.form</field>
      <field name="model">users.profile.wizard</field>
      <field name="arch" type="xml">
        <form string="User Profile">

          <div class="d-flex pb-2 align-items-center">
            <div>
              <i class="fa fa-user pb-1 fa-3x text-primary" title="Users"
                style="transform: rotate(180deg) scaleY(-1);" />
            </div>
            <div class="card-body">
              <h2 class="card-title">Edit Profile Details</h2>
              <p class="card-subtitle mb-2 text-muted">Your go-to solution for user
                profile updates.
              </p>
            </div>
          </div>
         <group>
          <div class="d-flex ">
          <i class="fa fa-user mt-1 me-2" role="img" aria-label="User" />
            <field name="user_id"  string="User" readonly="1" />
            </div>
          </group>

          <group>
            <group string="Data to Update">
              <field name="name" readonly="1" />
              <field name="email" readonly="1" />
              <field name="mobile" readonly="1" />
              <field name="address" readonly="1" />
            </group>
            <group string="New Values">
              <div colspan="2">
                <field name="new_name"  placeholder="Enter New Name" />
                <field name="new_email" placeholder="Enter New Email" />
                <field name="new_mobile" placeholder="Enter New Mobile" />
                <field name="new_address" placeholder="Enter New Address" />
              </div>
            </group>
          </group>

          <footer>
            <button name="write_records" 
                    string="Update" 
                    type="object" 
                    class="btn-primary"
                    />
            <button special="cancel"
              string="Cancel"
              class="btn-secondary" />
          </footer>


        </form>
      </field>
    </record>

    <record id="action_users_profile_wizard" model="ir.actions.act_window">
      <field name="name">User Profile Wizard</field>
      <field name="res_model">users.profile.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
  </data>
</odoo>