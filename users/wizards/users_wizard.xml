<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_user_wizard" model="ir.ui.view">
            <field name="name">users.wizard.form</field>
            <field name="model">users.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Radius User" onmouseover="this.classList.remove('o_content')">

                    <div class="d-flex pb-2 align-items-center">
                        <div>
                            <i class="fa fa-key pb-1 fa-3x text-primary" title="Users" />
                        </div>
                        <div class="card-body">
                            <h2 class="card-title">Edit Password Details</h2>
                            <p class="card-subtitle mb-2 text-muted">Your go-to solution for user
                                profile updates.
                            </p>
                        </div>
                    </div>
                   <group>
          <div class="d-flex ">
          <i class="fa fa-user mt-1 me-2" role="img" aria-label="User" />
            <field name="user_id"  string="User" readonly="1" />
            </div>
          </group>

                    <group>
                        <group string="Data to Update">
                            <div>
                                <field name="field_to_update" readonly="1" />
                            </div>
                        </group>
                        <group string="Current Password">
                            <div colspan="2">
                                <field name="password"  invisible="field_to_update != 'password'"/> 
                            </div>
                        </group>
                          <group string="New Password" colspan="2">
                            <div colspan="2">
                                <field name="field_value"/> 
                               
                           </div>
                        </group>
                       
                    </group>

                    <footer>
                        <button name="action_update_password" 
                            string="Update" 
                            type="object" 
                            class="btn-primary"/>
                        <button special="cancel"
                            string="Cancel"
                            class="btn-secondary" />
                    </footer>


                </form>
            </field>
        </record>

        <record id="action_users_wizard" model="ir.actions.act_window">
            <field name="name">Users Wizard</field>
            <field name="res_model">users.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>