<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Explicit List View Definition -->
    <record model="ir.ui.view" id="radreply_list_view">
      <field name="name">RADIUS Reply List</field>
      <field name="model">radreply</field>
      <field name="arch" type="xml">
        <list>
          <field name="username" />
          <field name="attribute" />
          <field name="op" />
          <field name="value" />
        </list>
      </field>
    </record>

    <!-- Form View for RadReply -->
    <record model="ir.ui.view" id="radreply_form_view">
      <field name="name">RADIUS Reply Form</field>
      <field name="model">radreply</field>
      <field name="arch" type="xml">
        <form string="RADIUS Reply">
          <sheet>
            <group>
              <group string="User Information">
                <field name="username" placeholder="Enter Username" />
                
              </group>

              <group string="Operator and Value">
              <div class="d-flex justify-content-between" colspan="2">
              <field name="attribute" placeholder="Enter Attribute" />
                <field name="op" placeholder="Enter Operator (e.g., :)" />
                <field name="value" placeholder="Enter Value" />
                </div>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action to Open Views -->
    <record model="ir.actions.act_window" id="radreply_action_window">
      <field name="name">RADIUS Reply</field>
      <field name="res_model">radreply</field>
      <field name="view_mode">list,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new RADIUS Reply record.
        </p>
      </field>
    </record>

    <!-- Menu Items -->
    <menuitem name="RadReply" id="menu_radreply_list" parent="menu_acct_operation" action="radreply_action_window" />
  </data>
</odoo>
