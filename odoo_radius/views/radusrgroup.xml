<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Explicit List View Definition for RadUserGroup -->
    <record model="ir.ui.view" id="radusergroup_list_view">
      <field name="name">RADIUS User Group List</field>
      <field name="model">radusergroup</field>
      <field name="arch" type="xml">
        <list>
          <field name="username" />
          <field name="groupname" />
          <field name="priority" />
        </list>
      </field>
    </record>

    <!-- Form View for RadUserGroup -->
    <record model="ir.ui.view" id="radusergroup_form_view">
      <field name="name">RADIUS User Group Form</field>
      <field name="model">radusergroup</field>
      <field name="arch" type="xml">
        <form string="RADIUS User Group">
          <sheet>
            <group>
              <group string="User Information">
                <field name="username" placeholder="Enter Username" />
              </group>

              <group string="Group Information">
                <field name="groupname" placeholder="Enter Group Name" />
                <field name="priority" placeholder="Enter Priority" />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action to Open Views -->
    <record model="ir.actions.act_window" id="radusergroup_action_window">
      <field name="name">RADIUS User Group</field>
      <field name="res_model">radusergroup</field>
      <field name="view_mode">list,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new RADIUS User Group record.
        </p>
      </field>
    </record>

    <!-- Menu Items -->
    <menuitem name="RadUserGroup" id="menu_radusergroup_list" parent="menu_acct_operation" action="radusergroup_action_window" />
  </data>
</odoo>
