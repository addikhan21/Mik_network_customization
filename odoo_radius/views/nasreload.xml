<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View nasreload View Tree -->
    <record id="view_nas_reload_tree" model="ir.ui.view">
        <field name="name">view.nasreload.list</field>
        <field name="model">nasreload</field>
        <field name="arch" type="xml">
            <list>
                <field name="nas_ip_address" />
                <field name="reload_time" />
            </list>
        </field>
    </record>

    <!-- View nasreload form -->
    <record id="view_nas_reload_form" model="ir.ui.view">
        <field name="name">view.nasreload.form</field>
        <field name="model">nasreload</field>
        <field name="arch" type="xml">
            <form string="Nas Reload">
                <sheet>
                    <group>
                        <field name="nas_ip_address" />
                        <field name="reload_time" />
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- View nasreload search -->
    <record id="view_nas_reload_search" model="ir.ui.view">
        <field name="name">view.nasreload.search</field>
        <field name="model">nasreload</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Ip Address" name="nas_ip_address" domain="[]" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action nasreload -->
    <record id="action_nas_reload" model="ir.actions.act_window">
        <field name="name">Nas Reload</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nasreload</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Nas Reload.
            </p>
        </field>
    </record>

    <menuitem name="Reload Logs" id="menu_nas_reload_log" parent="menu_operation_nas" action="action_nas_reload" />

</odoo>