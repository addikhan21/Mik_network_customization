<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Explicit List View Definition -->
    <record model="ir.ui.view" id="radcheck_list_view">
      <field name="name">RADIUS Check List</field>
      <field name="model">radcheck</field>
      <field name="arch" type="xml">
        <list>
          <field name="username" />
          <field name="attribute" />
          <field name="op" />
          <field name="value" />
        </list>
      </field>
    </record>

    <!-- Form View for RadCheck -->
    <record model="ir.ui.view" id="radcheck_form_view">
      <field name="name">RADIUS Check Form</field>
      <field name="model">radcheck</field>
      <field name="arch" type="xml">
        <form string="RADIUS Check">
          <sheet>
            <group>
              <group string="User Information">
                <field name="username" placeholder="Enter Username" />
              </group>

              <group string="Operator and Value">
                <div class="d-flex justify-content-between" colspan="2">
                <field name="attribute" placeholder="Enter Attribute" />
                <field name="op" placeholder="Enter Operator (e.g., :)" />
                <field name="value" placeholder="Enter Value" />
                </div>
              </group>
            </group>
          </sheet>
        <chatter/>
        </form>
      </field>
    </record>

    <!-- Action to Open Views -->
    <record model="ir.actions.act_window" id="radcheck_action_window">
      <field name="name">RADIUS Check</field>
      <field name="res_model">radcheck</field>
      <field name="view_mode">list,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new RADIUS Check record.
        </p>
      </field>
    </record>

     <!-- Menu Items -->
    <menuitem name="Radius Manager" id="menu_acct_root" web_icon="odoo_radius,static/description/icon.png" sequence="-897" groups="base_security_groups.group_admin"/>
    <menuitem name="Operations" id="menu_acct_operation" parent="menu_acct_root"/>
    <menuitem name="Radius Accounting" id="menu_radius_accounting" parent="menu_acct_root"/>
    <menuitem name="Nas" id="menu_operation_nas" parent="menu_acct_root"/>
    <!-- Menu Items -->
    <menuitem name="RadCheck" id="menu_radcheck_list" parent="menu_acct_operation" action="radcheck_action_window" />
  </data>
</odoo>
